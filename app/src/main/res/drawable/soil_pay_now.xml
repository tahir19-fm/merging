<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#AD897C"
                android:endColor="#744535"
                android:angle="90" />


            <corners
                android:bottomRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:topLeftRadius="15dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>


    <item>
        <shape>
            <gradient

                android:startColor="#A86651"
                android:endColor="#744535"
                android:angle="90" />


            <corners
                android:bottomRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:topRightRadius="15dp"
                android:topLeftRadius="15dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>



</selector>