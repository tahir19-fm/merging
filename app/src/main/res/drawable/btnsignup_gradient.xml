<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <gradient

                android:startColor="#81412C"
                android:endColor="#4C281C"
                android:angle="0" />

            <corners
                android:radius="30dp" />

            <padding
                android:right="15dp"
                android:top="5dp"
                android:bottom="5dp"
                android:left="15dp" />


        </shape>
    </item>


    <item>
        <shape>
            <gradient

                android:startColor="#4C281C"
                android:endColor="#81412C"
                android:angle="0" />


            <corners
                android:radius="30dp" />

            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />

        </shape>
    </item>




</selector>