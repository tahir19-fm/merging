<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/statusBarColor</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/colorOnPrimary</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/DatePickerTheme</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/colorOnPrimary</item>
    </style>

    <style name="DatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>
</resources>