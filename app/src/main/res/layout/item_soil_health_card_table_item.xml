<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_row_border"
    android:gravity="center_vertical"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2px"
        android:layout_weight="2"
        android:background="#F4F4F4"
        android:padding="@dimen/activity_vertical_margin"
        tools:ignore="PxUsage">

        <TextView
            android:id="@+id/soilHealthCardItem_text_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PARAMETERS"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E4E4E4" />

    <TextView
        android:id="@+id/soilHealthCardItem_text_testVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_spacing"
        android:layout_weight="1"
        android:text="TEST VALUE"
        android:textSize="@dimen/font_size_normal"
        android:textStyle="normal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E4E4E4" />

    <TextView
        android:id="@+id/soilHealthCardItem_text_unit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_spacing"
        android:layout_weight="1"
        android:text="UNIT"
        android:textSize="@dimen/font_size_normal"
        android:textStyle="normal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E4E4E4" />

    <TextView
        android:id="@+id/soilHealthCardItem_text_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_spacing"
        android:layout_weight="1"
        android:text="RATING"
        android:textSize="@dimen/font_size_normal"
        android:textStyle="normal" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#E4E4E4" />

    <TextView
        android:id="@+id/soilHealthCardItem_text_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_spacing"
        android:layout_weight="1"
        android:text="NORMAL"
        android:textSize="@dimen/font_size_normal"
        android:textStyle="normal" />

</LinearLayout>