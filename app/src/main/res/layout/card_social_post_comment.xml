<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="1dp">

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/activity_vertical_margin"
        android:paddingVertical="@dimen/small_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top"
                android:src="@mipmap/ic_avatar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardSocialWallComment_text_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_spacing"
                    android:layout_marginLeft="@dimen/normal_spacing"
                    android:maxLines="1"
                    android:text="Tom Samson"
                    android:textSize="@dimen/font_size_normal"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardSocialWallComment_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_spacing"
                    android:layout_marginLeft="@dimen/normal_spacing"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/small_spacing"
                    android:text="4 h"
                    android:textColor="@color/grey_dark"
                    android:textSize="@dimen/font_size_small" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cardSocialWallComment_text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_spacing"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/lorem_ipsum"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

</androidx.cardview.widget.CardView>