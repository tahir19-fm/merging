<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_curved_white_background"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/mapBottomButton_button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:paddingHorizontal="@dimen/activity_vertical_margin"
            android:text="@string/places_cancel"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/normal_spacing"
            android:background="@color/grey_1" />

        <Button
            android:id="@+id/mapBottomButton_button_save"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:enabled="false"
            android:paddingHorizontal="@dimen/activity_vertical_margin"
            android:text="@string/complete"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>