<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/mapDrawOptions_button_drawBoundary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_spacing"
            android:background="@drawable/button_orange_background_curved_border"
            android:drawablePadding="@dimen/normal_spacing"
            android:paddingLeft="@dimen/activity_vertical_margin_content"
            android:paddingRight="@dimen/activity_vertical_margin_content"
            android:text="@string/draw_farm_boundary"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_normal" />

        <Button
            android:id="@+id/mapDrawOptions_button_skipDraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_curved_border"
            android:drawablePadding="@dimen/normal_spacing"
            android:paddingLeft="@dimen/activity_vertical_margin_content"
            android:paddingRight="@dimen/activity_vertical_margin_content"
            android:text="@string/skip_this_process"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>