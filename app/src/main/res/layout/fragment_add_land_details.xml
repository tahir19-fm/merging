<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/addLandDetails_linear_actionBar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/back"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_prev" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/land_details"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_very_large"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/addLandDetails_image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/close"
            android:minWidth="36dp"
            android:minHeight="36dp"
            app:srcCompat="@drawable/ic_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addLandDetails_linear_actionBar"
        android:background="@drawable/actionbar_foreground"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="96dp"
        android:paddingRight="@dimen/fab_margin"
        android:paddingBottom="@dimen/activity_vertical_margin_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/addLandDetails_linear_actionBar"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/white_background_curved_border"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/addLandDetails_linear_detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addLandDetails_textInputLayout_regNum"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:autofillHints="Name"
                android:hint="@string/land_registration_no"
                android:inputType="textPersonName"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/font_size_normal"
                app:helperText="Optional">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addLandDetails_textInputEdit_regNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:imeOptions="actionNext"
                    android:inputType="textCapCharacters"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:overScrollMode="always"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/font_size_normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addLandDetails_textInputLayout_area"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:autofillHints="Name"
                android:hint="@string/land_area"
                android:inputType="textPersonName"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/font_size_normal"
                app:suffixText="@string/hectares"
                app:suffixTextColor="@color/hectares_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addLandDetails_textInputEdit_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:overScrollMode="always"
                    android:padding="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/font_size_normal"
                    app:prefixText="31" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addLandDetails_textInputLayout_waterSource"
                style="@style/TextInputLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:autofillHints="Name"
                android:hint="@string/water_source"
                android:inputType="textPersonName"
                android:textColorHint="@color/grey_dark"
                android:textSize="@dimen/font_size_normal">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/addLandDetails_autoComplete_waterSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:drawableRight="@drawable/ic_dropdown"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="@dimen/activity_vertical_margin"
                    android:textColorHint="@color/colorPrimary"
                    android:textSize="@dimen/font_size_normal" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Land documents (optional)"
                android:textColor="@color/quantum_grey700"
                android:textSize="@dimen/font_size_normal"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addLandDetails_recyclerview_docs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/addLandDetails_button_save"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addLandDetails_linear_detailsContainer"
            app:layout_constraintVertical_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="+ Upload another document"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_size_normal"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/addLandDetails_button_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/button_white_background_curved_border"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:paddingHorizontal="@dimen/activity_vertical_margin_content"
                android:paddingVertical="@dimen/normal_spacing"
                android:text="@string/upload"
                android:textColor="@color/colorPrimary"
                app:drawableStartCompat="@drawable/ic_upload" />

        </LinearLayout>

        <Button
            android:id="@+id/addLandDetails_button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_vertical_margin"
            android:background="@drawable/button_orange_background_curved_border"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>