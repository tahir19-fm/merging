<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".nutrisource.SoilCartActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@color/white"
      android:padding="10dp"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
      <ImageView
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:background="@drawable/leftarrowgray"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/grey_solid"
          android:text="Booking Request"
          android:layout_marginLeft="5dp"
          android:textSize="16dp"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="gone"
        >
      <ImageView
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:background="@drawable/search"
          />
      <ImageView
          android:id="@+id/cart"
          android:layout_width="18dp"
          android:layout_height="18dp"
          android:background="@drawable/shoppingcart"
          android:layout_marginLeft="10dp"
          />
    </LinearLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/grey_solid"

      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="70dp"
        android:fillViewport="true"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
          <TextView
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/text_color"
              android:text="Soil Collection Mode :" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="By Lab Expert"
              android:textColor="@color/white"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:layout_marginTop="5dp"
              android:fontFamily="@font/robotoserifregular"
              android:background="@drawable/button_bg_soil"
              />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="YOUR FARM LOCATION"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="CHANGE"
                android:textColor="@color/soilcolor"
                android:layout_gravity="right"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:background="@drawable/boxshadow"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/soilcolor"
                android:text="FARM"
                android:textStyle="bold"
                android:textAllCaps="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#350 House No., Village Name, Street Address, State, City"
                android:textColor="@color/text_color"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="Pincode"
                android:layout_marginTop="10dp"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CONTACT DETAILS"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="CHANGE"
                android:textColor="@color/soilcolor"
                android:layout_gravity="right"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:background="@drawable/boxshadow"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/soilcolor"
                android:text="Name"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+919876543210"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_color"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="SELECTED SOIL TEST SERVICE (2)"
                />
            <TextView
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Total Payment |"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$80"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="@drawable/boxshadow"
              android:orientation="vertical"
              >

            <androidx.recyclerview.widget.RecyclerView
                android:layout_weight="1"
                android:id="@+id/cart_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                />
            <TextView
                android:layout_weight="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_margin="10dp"
                android:background="@drawable/backgoundrating"
                android:text="+ Add more Soil Testing Service"
                />
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="COUPONS"
              android:layout_marginTop="10dp"
              android:textColor="@color/text_color"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:background="@drawable/boxshadow"
              >
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/soilcolor"
                android:text="Apply Coupon"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_weight="0"
                android:background="@drawable/rightarrowgreen"
                android:layout_gravity="right"
                />
          </LinearLayout>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="LAB LOCATION"
              android:textColor="@color/text_color"
              android:layout_marginTop="10dp"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/boxshadow"
              android:padding="10dp"
              android:layout_marginTop="10dp"
              android:orientation="vertical"
              >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
              <TextView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Lab Location"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:layout_weight="0"
                  android:text="Delivery in"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:text="3 hr: 30 min"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginLeft="5dp"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
              <LinearLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soil Testing Lab"
                    android:textColor="@color/soilcolor"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                  >
                  <ImageView
                      android:layout_weight="0"
                      android:layout_width="16dp"
                      android:layout_height="16dp"
                    android:background="@drawable/pinsoil"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/soilcolor"
                    android:text="Village Market Road"
                  android:layout_marginLeft="5dp"
                    />
                </LinearLayout>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="right|center"
                  >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5Km away"
                    android:background="@drawable/button_bg_soil"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="from your Location"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    />

              </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
              <androidx.fragment.app.FragmentContainerView
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:id="@+id/mapViewFragment1"
                  android:layout_marginTop="10dp"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  />
              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/imagetrans"
                  android:layout_alignTop="@+id/mapViewFragment1"
                  android:layout_alignBottom="@+id/mapViewFragment1"
                  android:layout_alignEnd="@+id/mapViewFragment1"
                  android:layout_alignRight="@+id/mapViewFragment1"
                  android:layout_alignLeft="@+id/mapViewFragment1"
                  android:layout_alignStart="@+id/mapViewFragment1"
                  android:src="@color/transparent"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/soil_light_color"
                android:layout_marginBottom="20dp"
                >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textSize="10dp"
                  android:text="Store Direction and contact details with owner will be shared after booking"
                  />
            </LinearLayout>
          </LinearLayout>



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BILL DETAILS"
                android:textColor="@color/text_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="CHANGE"
                android:textColor="@color/soilcolor"
                android:layout_gravity="right"
                />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="10dp"
              android:padding="10dp"
              android:background="@drawable/boxshadow"
              >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

              <TextView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="MRP Price"
                  android:textColor="@color/text_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/soilcolor"
                  android:text="$100"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

              <TextView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Discount"
                  android:textColor="@color/text_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/soilcolor"
                  android:text="30%"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

              <TextView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Delivery Charges"
                  android:textColor="@color/text_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/soilcolor"
                  android:text="$10"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

              <TextView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="GST/Tax Charges"
                  android:textColor="@color/text_color"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/soilcolor"
                  android:text="$10"
                  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgoundrating"
                >
              <TextView
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="TOTAL AMOUNT"
                  android:textColor="@color/soilcolor"
                  android:textStyle="bold"
                  />
              <TextView
                  android:layout_weight="0"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:textColor="@color/soilcolor"
                  android:text="$80"
                  android:layout_gravity="right"
                  />
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>

      </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg_soil"
        android:orientation="horizontal"

        >
      <LinearLayout
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Total Payment |"
              android:textColor="@color/white"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:text="$80"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"

            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="View Bill"
              android:textColor="@color/white"
              android:textSize="12dp"
              />
          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/downarrowcircle"
              android:layout_marginLeft="5dp"
              />
        </LinearLayout>
      </LinearLayout>
      <TextView
          android:id="@+id/sendrequest"
          android:layout_weight="0"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="Send Request"
          android:paddingLeft="25dp"
          android:paddingRight="25dp"
          android:textColor="@color/soilcolor"
          android:background="@drawable/button_border"
          android:gravity="center"
          android:textStyle="bold"
          android:layout_gravity="center"
          />
    </LinearLayout>
  </RelativeLayout>
  </LinearLayout>